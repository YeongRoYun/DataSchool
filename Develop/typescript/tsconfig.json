{
  "compilerOptions": {
    "module":"CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "baseUrl": ".",
    "outDir" : "dist/",
    "paths" : {"*": ["node_modules/*", "src/utils/*"]},
    "esModuleInterop" : false,
    "sourceMap" : true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "typeRoots": ["src/utils/@types", "node_modules/@types"],
  },
  "include" : ["src/**/*"],
}