{
  "compilerOptions": {
    "module" : "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "baseUrl": ".",
    "outDir": "/dist",
    "paths": {"*" : ["node_modules/*"]},
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
}